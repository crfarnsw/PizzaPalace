@page
@model PizzaPalace.Pages.Order.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Orders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Orders.OrderId" />
            <div class="form-group">
                <label asp-for="Orders.CustomerId" class="control-label"></label>
                <select asp-for="Orders.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Orders.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.StoreId" class="control-label"></label>
                <select asp-for="Orders.StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                <span asp-validation-for="Orders.StoreId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orders.OrderDate" class="control-label"></label>
                <input asp-for="Orders.OrderDate" class="form-control" />
                <span asp-validation-for="Orders.OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
