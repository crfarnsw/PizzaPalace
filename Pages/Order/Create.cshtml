@page
@model PizzaPalace.Pages.Order.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
    </div>
    <div class="col-md-8">
        <div class="card bg-dark">
            <div class="card-body">
                <h2 class="card-title">Create your order</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Orders.CustomerId" hidden="hidden" class="control-label"></label>
                        <input asp-for="Orders.CustomerId" hidden="hidden" value="@ViewBag.CustomerId" class="form-control"></input>
                    </div>
                    <div class="form-group">
                        <label asp-for="Orders.StoreId" class="control-label">Choose a store</label>
                        <select asp-for="Orders.StoreId" class="form-control" asp-items="ViewBag.StoreId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Orders.OrderDate" class="control-label"></label>
                        <input readonly="readonly" asp-for="Orders.OrderDate" class="form-control" value="@DateTime.Now"/>
                        <span asp-validation-for="Orders.OrderDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Start your order" class="btn btn-outline-success"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
