@page
@model PizzaPalace.Pages.BeverageOrders.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>BeverageOrder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BeverageOrder.BeverageId" class="control-label">Select a Beverage</label>
                <select asp-for="BeverageOrder.BeverageId" class="form-control" asp-items="ViewBag.BeverageId"></select>
            </div>
            <div class="form-group">
                <label asp-for="BeverageOrder.OrderItemId" hidden="hidden" class="control-label"></label>
                <input asp-for="BeverageOrder.OrderItemId" hidden="hidden" class="form-control" value="@Model._orderItemId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
