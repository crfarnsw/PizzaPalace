@page
@model PizzaPalace.Pages.BeverageOrders.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to remove this item?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BeverageOrder.Beverage)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BeverageOrder.Beverage.BeverageName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="BeverageOrder.BeverageOrderId" />
        <input type="submit" value="Remove" class="btn btn-danger" /> 
    </form>
</div>
