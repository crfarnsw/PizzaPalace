@page 
@model PizzaPalace.Pages.PizzaToppings.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col">
    </div>
    <div class="col-md-6">
        <h2>Add toppings to your pizza</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PizzaToppings.ToppingId" class="control-label">Select a Topping</label>
                <select asp-for="PizzaToppings.ToppingId" class="form-control" asp-items="ViewBag.ToppingId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PizzaToppings.PizzaOrderId" hidden="hidden" class="control-label"></label>
                <input asp-for="PizzaToppings.PizzaOrderId" hidden="hidden" class="form-control" value="@Model._PizzaOrderId" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
    <div class="col">
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
