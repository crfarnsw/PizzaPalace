@page
@model PizzaPalace.Pages.Customer.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>New Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customers.FirstName" class="control-label">First Name</label>
                <input asp-for="Customers.FirstName" class="form-control" />
                <span asp-validation-for="Customers.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.LastName" class="control-label">Last Name</label>
                <input asp-for="Customers.LastName" class="form-control" />
                <span asp-validation-for="Customers.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.Email" class="control-label">E-mail Address</label>
                <input asp-for="Customers.Email" class="form-control" />
                <span asp-validation-for="Customers.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.Password" class="control-label">Password</label>
                <input asp-for="Customers.Password" type="password" class="form-control" />
                <span asp-validation-for="Customers.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.Phone" class="control-label">Phone Number</label>
                <input asp-for="Customers.Phone" class="form-control" />
                <span asp-validation-for="Customers.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.City" class="control-label">City</label>
                <input asp-for="Customers.City" class="form-control" />
                <span asp-validation-for="Customers.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.Address" class="control-label">Street Address</label>
                <input asp-for="Customers.Address" class="form-control" />
                <span asp-validation-for="Customers.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.State" class="control-label"></label>
                <input asp-for="Customers.State" class="form-control" />
                <span asp-validation-for="Customers.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customers.ZipCode" class="control-label">Zip Code</label>
                <input asp-for="Customers.ZipCode" class="form-control" />
                <span asp-validation-for="Customers.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
