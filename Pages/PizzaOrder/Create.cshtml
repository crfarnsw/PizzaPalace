@page
@model PizzaPalace.Pages.PizzaOrder.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Add Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PizzaOrder.OrderItemId" hidden="hidden" class="control-label"></label>
                <input asp-for="PizzaOrder.OrderItemId"  readonly="readonly" type="hidden" value="@Model._orderItemId" />
            </div>
            <div class="form-group">
                <label asp-for="PizzaOrder.PizzaId" class="control-label">Choose your pizza</label>
                <select asp-for="PizzaOrder.PizzaId" class ="form-control" asp-items="ViewBag.PizzaId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
