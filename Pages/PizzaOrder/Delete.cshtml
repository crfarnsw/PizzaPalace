@page
@model PizzaPalace.Pages.PizzaOrder.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div>
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.PizzaOrder.Pizza)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PizzaOrder.Pizza.PizzaName)
        </dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="PizzaOrder.PizzaOrderId" />
        <input type="submit" value="Delete" class="btn btn-default" />
    </form>
</div>
