@page
@model PizzaPalace.Pages.Pizza.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].PizzaName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].PizzaDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pizza[0].PizzaPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Pizza) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PizzaPrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PizzaId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PizzaId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PizzaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
