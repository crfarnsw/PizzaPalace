@page
@model PizzaPalace.Pages.Pizza.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Pizza</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pizza.PizzaId" />
            <div class="form-group">
                <label asp-for="Pizza.PizzaName" class="control-label"></label>
                <input asp-for="Pizza.PizzaName" class="form-control" />
                <span asp-validation-for="Pizza.PizzaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.PizzaDescription" class="control-label"></label>
                <input asp-for="Pizza.PizzaDescription" class="form-control" />
                <span asp-validation-for="Pizza.PizzaDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.PizzaPrice" class="control-label"></label>
                <input asp-for="Pizza.PizzaPrice" class="form-control" />
                <span asp-validation-for="Pizza.PizzaPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
